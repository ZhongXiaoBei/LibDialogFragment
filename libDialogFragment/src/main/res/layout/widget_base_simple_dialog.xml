<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/base_simple_dialog_ll"
        android:layout_width="@dimen/base_simple_dialog_width"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/base_simple_dialog_height"
        android:background="@drawable/shape_rect_sol_white_cor5"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/base_simple_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_simple_dialog_title_height"
            android:paddingLeft="@dimen/base_simple_dialog_title_padding_h"
            android:paddingRight="@dimen/base_simple_dialog_title_padding_h"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end" />

        <View
            android:id="@+id/base_simple_dialog_title_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <!-- view container -->
        <LinearLayout
            android:id="@+id/base_simple_dialog_container_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" />

        <View
            android:id="@+id/base_simple_dialog_key_top_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:id="@+id/base_simple_dialog_key_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_simple_dialog_key_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/base_simple_dialog_key_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_nor_black_pre_black40" />

            <View
                android:id="@+id/base_simple_dialog_key_center_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/base_simple_dialog_key_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_nor_black_pre_black40"/>

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>